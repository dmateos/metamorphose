<%- model_class = Pipe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<% @pipes.each do |pipe| %>
  <div class="jumbotron">
    <div class="pipe-block">
      <h2> <%= link_to pipe.id, pipe %> </h2>
      <div> <h3> <%= pipe.in_type %> => <%= pipe.out_type %> </h3> </div>
      <div> flows: <%= pipe.flows.count %> </div>
      <div> transforms: <%= pipe.transforms.count %> </div>
    </div>

    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_pipe_path(pipe), :class => 'btn btn-default btn-xs' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                pipe_path(pipe),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-xs btn-danger' %>
  </div>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pipe_path,
            :class => 'btn btn-primary' %>
