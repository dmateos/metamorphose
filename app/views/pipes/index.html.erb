<%- model_class = Pipe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:in) %></th>
      <th><%= model_class.human_attribute_name(:out) %></th>
      <th><%= model_class.human_attribute_name(:in_type) %></th>
      <th><%= model_class.human_attribute_name(:in_options) %></th>
      <th><%= model_class.human_attribute_name(:out_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pipes.each do |pipe| %>
      <tr>
        <td><%= link_to pipe.id, pipe_path(pipe) %></td>
        <td><%= pipe.in %></td>
        <td><%= pipe.out %></td>
        <td><%= pipe.in_type %></td>
        <td><%= pipe.in_options %></td>
        <td><%= pipe.out_type %></td>
        <td><%=l pipe.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pipe_path(pipe), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pipe_path(pipe),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pipe_path,
            :class => 'btn btn-primary' %>
