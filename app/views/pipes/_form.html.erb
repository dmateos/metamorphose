<%= form_for @pipe, :html => { :class => "form-horizontal pipe" } do |f| %>

    <% if @pipe.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pipe.errors.count, "error") %> prohibited this pipe from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :in_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :in_type, Pipe.in_types.keys.to_a, {}, :class => 'form-control' %>
    </div>
    <%= error_span(@pipe[:in_type]) %>
  </div>
  <div class="control-group">
    <%= f.label :out_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :out_type, Pipe.out_types.keys.to_a, {}, :class => 'form-control' %>
    </div>
    <%= error_span(@pipe[:out_type]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            pipes_path, :class => 'btn btn-default' %>

<% end %>
