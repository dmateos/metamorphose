<%- model_class = Pipe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:in) %>:</strong></dt>
  <dd><%= @pipe.in %></dd>
  <dt><strong><%= model_class.human_attribute_name(:out) %>:</strong></dt>
  <dd><%= @pipe.out %></dd>
  <dt><strong><%= model_class.human_attribute_name(:in_type) %>:</strong></dt>
  <dd><%= @pipe.in_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:out_type) %>:</strong></dt>
  <dd><%= @pipe.out_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:in_options) %>:</strong></dt>
  <dd><%= @pipe.in_options %></dd>
</dl>

<h3> In Sample </h3>
<pre>
  <%= @data_original[0..1000] %>
</pre>

<h3> Out Sample </h3>
<pre>
  <%= @data[0..1000] %>
</pre>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pipes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pipe_path(@pipe), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pipe_path(@pipe),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
