<%- model_class = Flow -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:connector_type) %></th>
      <th><%= model_class.human_attribute_name(:pipe_id) %></th>
      <th><%= model_class.human_attribute_name(:parameters) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @flows.each do |flow| %>
      <tr>
        <td><%= link_to flow.id, pipe_flow_path(@pipe, flow) %></td>
        <td><%= flow.connector_type %></td>
        <td><%= flow.pipe_id %></td>
        <td><%= flow.parameters %> </td>
        <td><%=l flow.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pipe_flow_path(@pipe, flow), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pipe_flow_path(@pipe, flow),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pipe_flow_path(@pipe),
            :class => 'btn btn-primary' %>
