<%- model_class = Flow -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:connector_type) %>:</strong></dt>
  <dd><%= @flow.connector_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pipe_id) %>:</strong></dt>
  <dd><%= @flow.pipe_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pipe_flows_path(@pipe), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pipe_flow_path(@pipe, @flow), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pipe_flow_path(@pipe, @flow),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
