<%- model_class = Transform -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pipe_id) %>:</strong></dt>
  <dd><%= @transform.pipe_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transform_type) %>:</strong></dt>
  <dd><%= @transform.transform_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parameters) %>:</strong></dt>
  <dd><%= @transform.parameters %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              transforms_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transform_path(@transform), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transform_path(@transform),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
