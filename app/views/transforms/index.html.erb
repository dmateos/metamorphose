<%- model_class = Transform -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:pipe_id) %></th>
      <th><%= model_class.human_attribute_name(:transform_type) %></th>
      <th><%= model_class.human_attribute_name(:parameters) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @transforms.each do |transform| %>
      <tr>
        <td><%= link_to transform.id, pipe_transform_path(@pipe, transform) %></td>
        <td><%= transform.pipe_id %></td>
        <td><%= transform.transform_type %></td>
        <td><%= transform.parameters %></td>
        <td><%=l transform.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pipe_transform_path(@pipe, transform), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pipe_transform_path(@pipe, transform),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pipe_transform_path(@pipe),
            :class => 'btn btn-primary' %>
